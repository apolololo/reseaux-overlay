  <style>
    :root {
      --primary: #9146FF;
      --primary-dark: #7c3ad1;
      --secondary: #00ADB5;
      --accent: #FF6B6B;
      --bg-dark: #0e0e10;
      --bg-card: rgba(255, 255, 255, 0.05);
      --text-primary: #efeff1;
      --text-secondary: #adadb8;
      --border-color: rgba(255, 255, 255, 0.1);
    }

    body {
      margin: 0;
      padding: 0;
      font-family: 'Montserrat', sans-serif;
      background: var(--bg-dark);
      color: var(--text-primary);
      min-height: 100vh;
    }

    .auth-background {
      position: fixed;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      z-index: -1;
      overflow: hidden;
    }

    .auth-gradient-circle {
      position: absolute;
      border-radius: 50%;
      filter: blur(60px);
      opacity: 0.5;
    }

    .auth-circle-1 {
      width: 300px;
      height: 300px;
      background: var(--primary);
      top: -100px;
      left: -100px;
      animation: float 8s ease-in-out infinite;
    }

    .auth-circle-2 {
      width: 400px;
      height: 400px;
      background: var(--secondary);
      bottom: -150px;
      right: -150px;
      animation: float 12s ease-in-out infinite;
    }

    .auth-circle-3 {
      width: 200px;
      height: 200px;
      background: var(--accent);
      bottom: 50%;
      left: 50%;
      transform: translate(-50%, 50%);
      animation: float 10s ease-in-out infinite;
    }

    @keyframes float {
      0%, 100% { transform: translateY(0); }
      50% { transform: translateY(-20px); }
    }

    .container {
      max-width: 1400px;
      margin: 0 auto;
      padding: 20px;
      position: relative;
      z-index: 1;
    }

    .header {
      display: flex;
      justify-content: space-between;
      align-items: center;
      padding: 20px;
      background: var(--bg-card);
      border-radius: 16px;
      backdrop-filter: blur(10px);
      border: 1px solid var(--border-color);
      margin-bottom: 30px;
      box-shadow: 0 8px 32px rgba(0, 0, 0, 0.1);
    }

    .header-left {
      display: flex;
      align-items: center;
      gap: 30px;
    }

    .header h1 {
      margin: 0;
      color: var(--primary);
      font-size: 2em;
      font-weight: 900;
    }

    .main-nav {
      display: flex;
      gap: 20px;
    }

    .nav-link {
      color: var(--text-secondary);
      text-decoration: none;
      font-weight: 600;
      padding: 8px 16px;
      border-radius: 8px;
      transition: all 0.3s ease;
    }

    .nav-link:hover {
      color: var(--primary);
      background: rgba(145, 70, 255, 0.1);
    }

    .user-info {
      display: flex;
      align-items: center;
      gap: 15px;
      background: rgba(255, 255, 255, 0.05);
      padding: 10px 20px;
      border-radius: 12px;
      border: 1px solid var(--border-color);
    }

    .user-avatar {
      width: 40px;
      height: 40px;
      border-radius: 50%;
      border: 2px solid var(--primary);
    }

    .user-name {
      font-weight: 700;
      color: var(--text-primary);
    }

    .logout-btn {
      background: var(--primary);
      color: white;
      border: none;
      padding: 10px 20px;
      border-radius: 8px;
      cursor: pointer;
      font-family: 'Montserrat', sans-serif;
      font-weight: 600;
      transition: all 0.3s ease;
      display: flex;
      align-items: center;
      gap: 8px;
    }

    .logout-btn:hover {
      background: var(--primary-dark);
      transform: translateY(-2px);
    }

    .logout-btn:active {
      transform: translateY(0);
    }

    .editor-container {
      display: grid;
      grid-template-columns: 250px 1fr 400px;
      gap: 20px;
      height: calc(100vh - 200px);
    }

    .file-explorer {
      background: var(--bg-card);
      border-radius: 16px;
      padding: 20px;
      backdrop-filter: blur(10px);
      border: 1px solid var(--border-color);
      display: flex;
      flex-direction: column;
    }

    .file-explorer-header {
      display: flex;
      justify-content: space-between;
      align-items: center;
      margin-bottom: 20px;
    }

    .file-explorer-title {
      color: var(--text-primary);
      font-size: 1.2em;
      font-weight: 700;
      margin: 0;
    }

    .file-list {
      flex: 1;
      overflow-y: auto;
    }

    .file-item {
      display: flex;
      align-items: center;
      gap: 10px;
      padding: 10px;
      border-radius: 8px;
      cursor: pointer;
      transition: all 0.3s ease;
      color: var(--text-secondary);
    }

    .file-item:hover {
      background: rgba(255, 255, 255, 0.05);
      color: var(--text-primary);
    }

    .file-item.active {
      background: rgba(145, 70, 255, 0.1);
      color: var(--primary);
    }

    .file-icon {
      width: 20px;
      height: 20px;
    }

    .file-name {
      font-size: 0.9em;
    }

    .code-editor {
      background: #1e1e1e;
      border-radius: 16px;
      overflow: hidden;
      display: flex;
      flex-direction: column;
    }

    .editor-header {
      display: flex;
      align-items: center;
      padding: 10px 20px;
      background: #252526;
      border-bottom: 1px solid #3c3c3c;
    }

    .editor-tabs {
      display: flex;
      gap: 2px;
    }

    .editor-tab {
      padding: 8px 16px;
      cursor: pointer;
      font-size: 0.9em;
      color: #969696;
      transition: all 0.3s ease;
      display: flex;
      align-items: center;
      gap: 8px;
      background: #2d2d2d;
      border-right: 1px solid #3c3c3c;
    }

    .editor-tab:hover {
      color: #fff;
    }

    .editor-tab.active {
      background: #1e1e1e;
      color: #fff;
      border-bottom: 2px solid var(--primary);
    }

    .editor-tab svg {
      width: 16px;
      height: 16px;
    }

    .CodeMirror {
      height: 100% !important;
      font-family: 'Fira Code', monospace;
      font-size: 14px;
      line-height: 1.6;
    }

    .CodeMirror-gutters {
      background: #1e1e1e !important;
      border-right: 1px solid #3c3c3c !important;
    }

    .CodeMirror-linenumber {
      color: #858585 !important;
    }

    .CodeMirror-cursor {
      border-left: 2px solid #fff !important;
    }

    .CodeMirror-selected {
      background: rgba(145, 70, 255, 0.2) !important;
    }

    .CodeMirror-matchingbracket {
      color: #fff !important;
      font-weight: bold;
    }

    .cm-s-dracula .CodeMirror-gutters {
      background: #1e1e1e !important;
    }

    .cm-s-dracula .CodeMirror-linenumber {
      color: #858585 !important;
    }

    .cm-s-dracula .CodeMirror-cursor {
      border-left: 2px solid #fff !important;
    }

    .cm-s-dracula .CodeMirror-selected {
      background: rgba(145, 70, 255, 0.2) !important;
    }

    .cm-s-dracula .CodeMirror-matchingbracket {
      color: #fff !important;
      font-weight: bold;
    }

    .preview-panel {
      background: var(--bg-card);
      border-radius: 16px;
      padding: 20px;
      backdrop-filter: blur(10px);
      border: 1px solid var(--border-color);
      display: flex;
      flex-direction: column;
    }

    .preview-header {
      display: flex;
      justify-content: space-between;
      align-items: center;
      margin-bottom: 20px;
    }

    .preview-title {
      color: var(--text-primary);
      font-size: 1.2em;
      font-weight: 700;
      margin: 0;
    }

    .preview-content {
      flex: 1;
      background: rgba(0, 0, 0, 0.2);
      border-radius: 8px;
      overflow: hidden;
    }

    .preview-iframe {
      width: 100%;
      height: 100%;
      border: none;
    }

    .action-buttons {
      display: flex;
      gap: 10px;
      margin-top: 20px;
    }

    .action-btn {
      background: var(--primary);
      color: white;
      border: none;
      padding: 12px 24px;
      border-radius: 8px;
      cursor: pointer;
      font-family: 'Montserrat', sans-serif;
      font-weight: 600;
      transition: all 0.3s ease;
      display: flex;
      align-items: center;
      gap: 8px;
      flex: 1;
      justify-content: center;
    }

    .action-btn:hover {
      background: var(--primary-dark);
      transform: translateY(-2px);
    }

    .action-btn:active {
      transform: translateY(0);
    }

    .action-btn.secondary {
      background: rgba(255, 255, 255, 0.05);
      color: var(--text-primary);
      border: 1px solid var(--border-color);
    }

    .action-btn.secondary:hover {
      background: rgba(255, 255, 255, 0.1);
    }
  </style>
</head>
<body>
