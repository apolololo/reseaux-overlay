  <script>
    // Initialisation de CodeMirror avec des options amÃ©liorÃ©es
    const editor = CodeMirror.fromTextArea(document.getElementById('editor'), {
      mode: 'htmlmixed',
      theme: 'dracula',
      lineNumbers: true,
      autoCloseTags: true,
      autoCloseBrackets: true,
      matchBrackets: true,
      indentUnit: 2,
      tabSize: 2,
      lineWrapping: true,
      foldGutter: true,
      gutters: ['CodeMirror-linenumbers', 'CodeMirror-foldgutter'],
      extraKeys: {
        'Ctrl-Space': 'autocomplete',
        'Ctrl-/': 'toggleComment',
        'Ctrl-F': 'findPersistent',
        'Ctrl-H': 'replace',
        'Ctrl-S': function(cm) {
          saveOverlay();
        }
      }
    });

    // Contenu par dÃ©faut des fichiers
    const defaultFiles = {
      html: `<!DOCTYPE html>
<html lang="fr">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Mon Overlay</title>
  <link rel="stylesheet" href="style.css">
</head>
<body>
  <div class="overlay">
    <h1>Mon Overlay</h1>
    <div id="content">
      <!-- Votre contenu ici -->
    </div>
  </div>
  <script src="script.js"></script>
</body>
</html>`,
      css: `/* Styles de votre overlay */
.overlay {
  font-family: Arial, sans-serif;
  color: white;
  padding: 20px;
}

h1 {
  font-size: 24px;
  margin-bottom: 20px;
}

#content {
  background: rgba(0, 0, 0, 0.5);
  padding: 15px;
  border-radius: 8px;
}`,
      js: `// Logique de votre overlay
document.addEventListener('DOMContentLoaded', () => {
  // Votre code ici
  console.log('Overlay chargÃ© !');
});`
    };

    // Gestion des fichiers
    let currentFile = 'html';
    editor.setValue(defaultFiles[currentFile]);

    // Gestion des onglets et de l'explorateur de fichiers
    function switchFile(fileType) {
      document.querySelector('.file-item.active').classList.remove('active');
      document.querySelector(`.file-item[data-file="${fileType}"]`).classList.add('active');
      
      document.querySelector('.editor-tab.active').classList.remove('active');
      document.querySelector(`.editor-tab[data-file="${fileType}"]`).classList.add('active');
      
      currentFile = fileType;
      editor.setValue(defaultFiles[fileType]);
      
      switch(fileType) {
        case 'html':
          editor.setOption('mode', 'htmlmixed');
          break;
        case 'css':
          editor.setOption('mode', 'css');
          break;
        case 'js':
          editor.setOption('mode', 'javascript');
          break;
      }
      
      updatePreview();
    }

    // Ã‰vÃ©nements pour les onglets
    document.querySelectorAll('.editor-tab').forEach(tab => {
      tab.addEventListener('click', () => {
        switchFile(tab.dataset.file);
      });
    });

    // Ã‰vÃ©nements pour l'explorateur de fichiers
    document.querySelectorAll('.file-item').forEach(item => {
      item.addEventListener('click', () => {
        switchFile(item.dataset.file);
      });
    });

    // Mise Ã  jour de l'aperÃ§u
    function updatePreview() {
      const preview = document.getElementById('preview');
      const content = editor.getValue();
      
      if (currentFile === 'html') {
        preview.srcdoc = content;
      } else {
        // Pour CSS et JS, on met Ã  jour le contenu dans l'iframe
        const iframe = preview.contentWindow;
        if (currentFile === 'css') {
          const style = iframe.document.createElement('style');
          style.textContent = content;
          iframe.document.head.appendChild(style);
        } else if (currentFile === 'js') {
          const script = iframe.document.createElement('script');
          script.textContent = content;
          iframe.document.body.appendChild(script);
        }
      }
    }

    // Ã‰coute des changements dans l'Ã©diteur
    editor.on('change', () => {
      updatePreview();
    });

    // Sauvegarde de l'overlay
    function saveOverlay() {
      const overlayData = {
        html: defaultFiles.html,
        css: defaultFiles.css,
        js: defaultFiles.js
      };
      
      // Sauvegarde dans le localStorage pour le moment
      localStorage.setItem('current_overlay', JSON.stringify(overlayData));
      
      // TODO: ImplÃ©menter la sauvegarde sur le serveur
      alert('Overlay enregistrÃ© !');
    }

    // Publication de l'overlay
    function publishOverlay() {
      // TODO: ImplÃ©menter la publication sur le marketplace
      alert('FonctionnalitÃ© de publication Ã  venir !');
    }

    // VÃ©rification de l'authentification
    document.addEventListener('DOMContentLoaded', () => {
      const userData = JSON.parse(localStorage.getItem('twitch_user'));
      if (!userData) {
        window.location.href = './auth/auth.html';
        return;
      }

      const userAvatar = document.getElementById('user-avatar');
      const userName = document.getElementById('user-name');
      
      if (userAvatar && userName) {
        userAvatar.src = userData.profile_image_url;
        userName.textContent = userData.display_name;
      }
    });

    function logout() {
      localStorage.removeItem('twitch_token');
      localStorage.removeItem('twitch_expires_at');
      localStorage.removeItem('twitch_user');
      window.location.href = './auth/auth.html';
    }
